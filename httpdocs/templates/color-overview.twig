{% if colors %}
    <div class="swatch-block">
        <div class="swatch-list">
            {% set swatchSize = 'swatch-medium' %}
            {% for color in colors %}
                {% include 'swatch.twig' %}
            {% endfor %}
        </div>
    </div>
    <div class="pagination-block clearfix">
        <ul id="pagination">
            {% for i in range(1, pages) %}
                {% if i == page %}
                    {% set linkClass = 'active' %}
                {% else %}
                    {% set linkClass = '' %}
                {% endif %}
                <li class="page-link {{ linkClass }}" data-page="{{ i }}">{{ i }}</li>
            {% endfor %}
        </ul>
    </div>

    {% if family %}
        <div id="detail-clear">
            <button type="button" id="clear-button">Clear</button>
        </div>
    {% endif %}
{% endif %}
